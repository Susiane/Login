<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crop"
    style="@style/LayoutHeigAndWidtMatchParent"
    android:background="#000033"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context="com.laboratory.android.login.view.CropActivity">
    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/imageCrop"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_crop"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#F26466"
            android:text="@string/photo_cancel"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/ok_crop"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="#66cacc"
            android:text="@string/photo_ok"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:visibility="gone"/>
        <!--android:visibility="gone"-->


    </LinearLayout>

</LinearLayout>
